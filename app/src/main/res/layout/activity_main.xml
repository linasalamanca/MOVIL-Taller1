<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp"
    android:background="@color/fondoVerde">

    <TextView
        android:id="@+id/Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App 1er Taller"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/Spinner_tipo_destino"
        />
    <Spinner
        android:id="@+id/Spinner_tipo_destino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/categoriaViajes"
        android:layout_above="@+id/BotonExplorarDestinos"
        android:background="@color/white"/>

    <Button
        android:id="@+id/BotonExplorarDestinos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Explorar Destinos" />

    <Button
        android:id="@+id/BotonFavoritos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Favoritos"
        android:layout_below="@+id/BotonExplorarDestinos"
        />
    <Button
        android:id="@+id/BotonRecomendaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recomendaciones"
        android:layout_below="@+id/BotonFavoritos"
        />

</RelativeLayout>